<!DOCTYPE html>
<html>
    <head>
        <title>Shop1</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <script src="https://kit.fontawesome.com/fc6aa7a24c.js" crossorigin="anonymous"></script>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <title>ながのCAKE</title>
    </head>
    <body>
        <header>
            <nav class="navbar navbar-default" style="height:60px;">
                <div class="container-fluid" style="height:60px;">
                    <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <h6><a href="/"></a></h6>
                    <div class="header-logo">ながのCAKE</div>
                    </div>
                    <div class="header-nav-div">
                        <% if admin_signed_in? %>
                            <li class="header-nav">
                                <%= link_to "商品一覧", admins_items_path, class: "btn-square-so-pop" %>
                            </li>
                            <li class="header-nav">
                                <%= link_to "会員一覧", admins_customers_path, class: "btn-square-so-pop" %>
                            </li>
                            <li class="header-nav">
                                <%= link_to "注文履歴一覧", admins_orders_path, class: "btn-square-so-pop" %>
                            </li>
                            <li class="header-nav">
                                <%= link_to "ジャンル一覧", admins_genres_path, class: "btn-square-so-pop" %>
                            </li>
                            <li class="header-nav">
                                <%= link_to "ログアウト", admins_sign_out_path, method: :delete, class: "btn-square-so-pop" %>
                            </li>
                        <% else %>
                            <li class="header-nav">
                                <%= link_to "About", about_path, class: "btn-square-so-pop" %>
                            </li>
                            <li class="header-nav">
                                <%= link_to "商品一覧", root_path, class: "btn-square-so-pop" %>
                            </li>
                            <li class="header-nav">
                                <%= link_to "新規登録", customers_sign_up_path, class: "btn-square-so-pop" %>
                            </li>
                            <li class="header-nav">
                                <%= link_to "ログイン", customers_sign_in_path, class: "btn-square-so-pop" %>
                            </li>
                        <% end %>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <%= yield %>
        </div>
    </body>
</html>