<h2 style="margin: 30px 0 50px 100px ;"><%= @customer.last_name %><%= @customer.first_name%>さんの会員詳細</h2>
<table class="table">
    <tbody>
    <tr>
        <th>顧客ID</th>
        <th>
            <label for="name"><%= @customer.id %>   <span class="label label-info"><%= @customer.is_deleted %></span></label>
        </th>
    </tr>
    <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %><%= @customer.first_name %></th>
    </tr>
    <tr>
        <th>フリガナ</th>
        <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
    </tr>
     <tr>
        <th>郵便番号</th>
        <th><%= @customer.postcode %></th>
    </tr>
     <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
    </tr>
     <tr>
        <th>電話番号</th>
        <th><%= @customer.phonenumber %></th>
    </tr>
     <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
    </tr>
    </tbody>
</table>
<%= link_to "編集する", edit_admins_customer_path, class: "btn btn-primary" %>
