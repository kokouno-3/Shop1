<h2 style="margin: 30px 0 50px 100px ;">会員一覧</h2>
<table class="table table-border">
  <thead>
    <tr>
      <th style="width: 20%;">会員ID</th>
      <th style="width: 20%;">氏名</th>
      <th style="width: 20%;">メールアドレス</th>
      <th style="width: 20%;">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.id %>
      </td>
      <td>
        <%= link_to admins_customer_path(customer) do %>
        <%= customer.last_name %><%= customer.first_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate1">
  <%= paginate @customers %>
</div>