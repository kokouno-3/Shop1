<div class="container">
  <div class="row">
    <h2 style="margin-top: 50px;">商品詳細</h2>
    <div class="col-xs-3">
      <%= attachment_image_tag @item, :image, size: "250x250", format: 'jpeg', fallback: "no-image.png" %>
    </div>
    <div class="col-xs-4">
      <div class="item-field">
        <p>商品名  <%= @item.name %></p></br>
      </div>
      <div class="item-field">
        <p>商品説明  <%= @item.explanation %></p></br>
      </div>
      <div class="item-field">
        <p>ジャンル  <%= @item.genre_id %></p></br>
      </div>
      <div class="item-field">
        <p>
          税込価格 (税抜価格）
          <%= (@item.price.* 1.1).round.to_s(:delimited) %>
          (<%= @item.price.to_s(:delimited) %>)
          <span>円</span>
        </p></br>
      </div>
      <div class="item-field">
        <p>販売ステータス　　<%= @item.is_status %></p>
      </div>
    </div>
    <div class="col-xs-2">
      <%= link_to "編集する", edit_admins_item_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>