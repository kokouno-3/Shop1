<div class="row">

  <div class="col-xs-4">
    <h2>商品新規登録</h2>
    <%= form_with model: @item, url: admins_items_path, local: true do |f| %>
    <%= attachment_image_tag(@item, :image_id, size: "300x300", format: 'jpeg', class: "img-rounded", fallback: "no-image.png") %>
    <label class="control-label sr-only" for="inputEmail"></label>
    <%= f.attachment_field :image %>
  </div>
  <div class="col-xs-8">
    <%= f.label :name, "商品名", class: "col-xs-4 control-label" %>
    <%= f.text_field :name %>
    
    <%= f.label :explanation, "商品説明", class: "col-xs-4 control-label" %>
      <%= f.text_area :explanation %>
      
    <%= f.label :genre_id, "ジャンル", class: "col-xs-4 control-label" %>
      <!--%= f.select :genre_id %-->
      
    <%= f.label :price, "税抜価格", class: "col-xs-4 control-label" %>
      <%= f.text_field :price %>円
      
    <%= f.label :is_status, "販売ステータス", class: "col-xs-4 control-label" %>
     <%= f.select :is_status,[['販売中', true],['販売中止', false]],{prompt: "選択してください"} %>
  </div>
  <div class="col-xs-2">
		<%= f.submit "新規登録", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>

