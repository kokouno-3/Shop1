<div class="row">
  <h2>商品新規登録</h2>
  <%= form_with model: @item, url: admins_items_path(@item), local: true do |f| %>
  <div class="col-xs-4">
    <%= attachment_image_tag(@item, :image_id, size: "300x300", format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no-image.png") %>
    <label class="control-label sr-only" for="inputEmail"></label>
    <%= f.attachment_field :image %>
  </div>
  <div class="col-xs-8">
    <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>商品説明</h4>
      <%= f.text_area :explanation %>
    <h4>ジャンル</h4>
      <%= f.select :genre_id %>
    <h4>税抜価格</h4>
      <%= f.text_field :price %>
    <h4>販売ステータス</h4>
      <%= f.select :is_status %>
  </div>
  <% end %>
  <div class="col-xs-2">
    <%= f.submit '新規登録' %>
  </div>
</div>
