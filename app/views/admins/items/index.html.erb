<div class="container">
	<div class="row">

	<div class="col-xs-11">
		<h2 style="margin-top: 50px;">商品一覧</h2>

		<div class="add-item">
			<%= link_to "商品登録", new_admins_item_path %>
				<i class="fas fa-cheese"></i>
		</div>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
			  	<tr>
			    	<td><%= item.id %></td>
			   		<td><%= link_to item.name, admins_item_path(item.id) %></td>
			   		<td><%= item.price.to_s(:delimited) %></td>
			   		<td><%= item.genre_id %></td>
			   		<% if item.is_status? %>
			   			<td>販売中</td>
        		<% else %>
        			<td>販売中止</td>
        		<% end %>
			 		</tr>
			 <% end %>
			</tbody>
		<% paginate @items%>
</div>
</div>
</div>