  <div class="row">
	<div class="col-xs-11">
		<h2 style="margin: 30px 0 30px 100px;">商品一覧</h2>
	<div>
		<div class="add-item">
			<%= link_to (new_admins_item_path) do %>
				<i class="fas fa-cheese"></i><% end %>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
			  	<tr>
			    	<td><%= item.id %></td>
			   		<td><%= link_to item.name, admins_item_path(item.id) %></td>
			   		<td><%= item.price.to_s(:delimited) %></td>
			   		<td><%= item.genre.name %></td>
			   		<td><%= item.is_status %></td>
			 		</tr>
			 <% end %>
			</tbody>
		<%= paginate @items %>
        </div>
    </div>
  </div>