<div class="row">
  <div class="col-xs-9">
		<h2>商品一覧</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
			 <% @items.each do |item| %>
			 <tr>
			   <td><%= item.id %></td>
			   <td>
			   	<%= item.name %>
			   	<%= link_to admins_item_path(item)%>
			   	</td>
			   <td><%= item.price %></td>
			   <td>ケーキ</td>
			   <td>販売中</td>
			 </tr>
			 <% end %>
			</tbody>
		<% paginate @items%>
</div>