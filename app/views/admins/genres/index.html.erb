<div class="container">
  <div class="row">
    <% if @genre.errors.any? %>
        <div id="erro_explanation" class="alert alert-danger">
          <ul>
            <%= @genre.errors.full_messages.each do |message| %>
              <li><%= message%></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <h2 style="margin-top: 50px;">ジャンル一覧・追加</h2>
      <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
      <div class="col-xs-3">
        <p>ジャンル</p>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.radio_button :is_status, '有効' %>有効 <%= f.radio_button :is_status, '無効' %>無効
        <%= f.submit "追加", class: "btn btn-primary" %>
      </div>
      <% end %>
      <div class="col-xs-8">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th>状態</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= genre.is_status %></td>
              <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>