<div class="container">
  <div class="row">
    <h2 style="margin-top: 50px;">ジャンル編集</h2>
      <%= form_with model: @genre, url: admins_genre_path(@genre), method: :patch, local: true do |f| %>
      <div class="col-xs-3">
        <p>ジャンル</p>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.radio_button :is_status, '有効' %>有効 <%= f.radio_button :is_status, '無効' %>無効
        <%= f.submit "変更を保存する", class: "btn btn-primary" %>
      </div>
      <% end %>

  </div>
</div>