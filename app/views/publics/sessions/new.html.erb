<h2>会員の方はこちらからログイン</h2>
<%= form_with model: @customer, url: customers_sign_in_path, local: true do |f| %>
  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <!--パスワードを忘れた人はこちら-->
  <!--<= render "publics/shared/links" %>-->

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

  <h2>登録がお済みでない方</h2>
  <div>
  <%= link_to "こちら", customers_sign_up_path %>から新規登録を行ってください。
  </div>


