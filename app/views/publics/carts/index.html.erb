<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", publics_cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
<table class="table table-bordered">
  <thead class="thead-light">
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
    <tr>
      <td>
        <%= cart.name %>
        </td>
      <td>
        <%= (@item.price.* 1.1).round.to_s(:delimited) %>
      </td>
      <td><%= cart.amount %><%= %></td>
      <td><%= @item.price.count %></td>
      <td><%= link_to "削除する",  publics_cart_path, method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
<%= link_to "情報入力に進む", new_publics_order_path, class: "btn btn-success btn-lg" %>
