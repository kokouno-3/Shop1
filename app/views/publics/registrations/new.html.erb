<h2>新規会員登録</h2>
  <%= form_with model: @customer, url: customers_sign_up_path, id: 'new_user', class: 'form', local: true do |f| %>
  
  <div class="registations-customer">
      <dt>名前</dt>
      <dd>
        <%= f.label :"（姓)" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        <%= f.label :"（名)" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </dd>
    
      <dt>フリガナ</dt>
      <dd>
        <%= f.label :"（セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        <%= f.label :"（メイ)" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </dd>
    
      <dt>メールアドレス</dt>
      <dd>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-under" %>
      </dd>
    
    
      <dt>郵便番号(ハイフンなし)</dt>
      <dd>
        <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "field-under" %>
      </dd>
    
      <dt>住所</dt>
      <dd>
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "field-under" %>
      </dd>
    
      <dt>電話番号(ハイフンなし)</dt>
      <dd>
        <%= f.text_field :phonenumber, autofocus: true, autocomplete: "address", class: "field-under" %>
      </dd>
    
      <dt>パスワード(6文字以上)</dt>
      <dd> 
        <%= f.password_field :password, autocomplete: "new-password", class: "field-under" %>
      </dd>
    
      <dt>パスワード(確認用)</dt>
      <dd>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-under" %>
      </dd>
      
      <dd>
        <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
      </dd>
  </div>
  <% end %>
  
  
    <h2 style="font-size:20px;">既に登録済みの方</h2>
    <div>
      <%= link_to "こちら", customers_sign_in_path, class: "btn btn-info" %>からログインしてください。
    </div>


