<h2>パスワード再設定</h2>
<%= form_with model: @customer, url: update_customer_registration_path, method: :patch, local: true do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>
    <div class="password-field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
    <div class="password-field">
      <%= f.label :現在のパスワード %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
     <div class="password-field">
      <%= f.label :新しいパスワード %> <br />
      <%= f.password_field :password, autocomplete: "new-password" %>
  <% if @minimum_password_length %>
      <br />
  <% end %>
     </div>
  <div class="password-field">
    <%= f.label :新しいパスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを更新する", class: "btn btn-primary" %>
  </div>
<% end %>
