<h2>注文履歴一覧</h2>
<table class="table table-bordered">
  <thead class="thead-light">
  <tr>
    <th class="active">注文日</th>
    <th class="active">配送先</th>
    <th class="active">注文商品</th>
    <th class="active">支払金額</th>
    <th class="active">ステータス</th>
    <th class="active">注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td>
        <%= order.postcode %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_details.each do |order_detail| %> <!--注文した注文商品をeachで出す-->
        <%= order_detail.item.name %><br> <!--注文した注文商品のitemの名前-->
        <% end %>
      </td>
      <td>
        <% order.order_details.each do |order_detail| %>
        <% sub_total = (order_detail.item.price.* 1.1.* order_detail.amount) %>
        <% @total += sub_total %>
        <% end %>
        <%= (@total.+ 800).round.to_s(:delimited) %>
      </td>
      <td>
        <%= order.status %>
      </td>
      <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
  <div class="paginate1">
  <%= paginate @orders, class: "paginate" %>
  </div>