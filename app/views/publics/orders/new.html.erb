<h2>注文情報入力</h2>
  <%= form_with model: @order, url:  publics_orders_comfirm_path, class: 'edit_admins_customer', local: true do |f| %>
    <div class="field">
      <%= f.label :"支払方法" %>
    </div>
    <div><%= f.radio_button :pay_way, "クレジット" %>クレジット</div>
    <div><%= f.radio_button :pay_way, "銀行振込" %> 銀行振込</div>

  <div class="field">
      <%= f.label :"お届け先" %>
    <div><%= f.radio_button :order, 1 %>ご自身の住所
         <%= f.hidden_field :order, value: 1 %>
         <%= @customer.postcode %><%= @customer.address %>
         <%= @customer.last_name %><%= @customer.first_name %>
    </div>

    <div><%= f.radio_button :order, 2 %>登録済住所から選択</div>
         <%= f.hidden_field :order, value: 2 %>
         <%= f.collection_select :order, @addresses, :id, :shipping_info %>

    <div><%= f.radio_button :order, 3 %>新しいお届け先</div>
         <%= f.hidden_field :order, value: 3 %>

  <div class="field">
         <%= f.label :"郵便番号(ハイフンなし)" %>
         <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>
    <br>

  <div class="field">
         <%= f.label :"住所" %>
         <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
    <br>

  <div class="field">
         <%= f.label :"宛名" %>
         <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

    <div class="actions">
         <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
