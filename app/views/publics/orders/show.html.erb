<h2>注文履歴詳細</h2>
<div class="row">
  <strong>注文情報</strong>
  <table class="table table-bordered">
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <%= @order.postcode %></br>
        <%= @order.address %></br>
        <%= @order.address.name %>
      </td>
    </tr>
    <tr>
      <th>支払い方法</th>
      <td><%= @order.pay_way %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.is_status %></td>
    </tr>
  </table>

  <strong>請求情報</strong>
  <table class="table table-bordered">
    <tr>
      <th>商品合計</th>
      <td><!--商品合計値のカラムは？--></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th><strong>ご請求額</strong></th>
      <td><%= @order.pay_money.to_s(:delimited) %></td>
    </tr>
  </table>

  <strong>注文商品</strong>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <%= @order.order_ditails.each do |order_ditails| %>
        <tr>
          <td><%= order_ditails.name %></td>
          <td><%= order_ditails.(price.* 1.1).round.to_s(:delimited) %></td>
          <td><%= order_ditails.amount %></td>
          <td><%= oder_ditails.%></td><!-- ココ！！ -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>