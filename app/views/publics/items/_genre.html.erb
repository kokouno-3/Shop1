<table class="table table-bordered" style="width:70%; margin: 50px 100px 0 0">
  <thead>
    <tr><th>ジャンル検索</th></tr>
  </thead>
  <tbody>
    <% Genre.all.each do |genre| %>
    <% if genre.is_status == '有効' %>
    <tr>
      <td>
        <%= link_to genre.name, genre_items_path(genre) %> <br>
      </td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>